<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Statistics</title>
  <link rel="stylesheet" href="/statistics.css"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <nav class="navbar">
    <a href="/"><i class="fas fa-home"></i> Home</a>
    <a href="/scores"><i class="fas fa-clipboard-list"></i> Score</a>
    <a href="/teams"><i class="fas fa-basketball-ball"></i> Team</a>
    <a href="/predictions"><i class="fas fa-chart-line"></i> Predictions</a>
    <a href="/contactus"><i class="fas fa-envelope"></i> Contact Us</a>
  </nav>

  <header class="header">
    <h1>PlayBook</h1>
  </header>

  <div class="container">
    <% if (locals.error) { %>
      <div class="error-message">
        <%= error %>
      </div>
    <% } %>

    <div class="stats-grid">
      <div class="stat-box">
        <h3>Points</h3>
        <ol>
          <% if (locals.leaders && leaders.categories) { %>
              <% const pointsLeaders = leaders.categories.find(cat => cat.name === "points") %>
              <% if (pointsLeaders && pointsLeaders.ranks) { %>
                  <% pointsLeaders.ranks.slice(0, 5).forEach(player => { %>
                      <li><%= player.player.full_name %> - <%= player.score.toFixed(1) %></li>
                  <% }) %>
              <% } else { %>
                  <li>Data not available</li>
              <% } %>
          <% } else { %>
              <li>Data not available</li>
          <% } %>
        </ol>
      </div>

